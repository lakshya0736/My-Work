class Solution {
    public boolean hasIncreasingSubarrays(List<Integer> numsList, int k) {
        int n=numsList.size();
        int[] nums = new int[n];
        for(int i=0; i<n; i++){
            nums[i]=numsList.get(i);
        }
        for(int i=0; i+2*k<=n; i++){
            boolean first = isIncreasing(nums, i, i+k-1);
            boolean second = isIncreasing(nums, i+k, i+2*k-1);
            if(first && second) return true;
        }
        return false;
        
    }
    private boolean isIncreasing(int[] nums, int l, int r){
        for(int i=l+1; i<=r; i++){
            if(nums[i]<=nums[i-1]) return false;
        }
        return true;
    }
}
