class Solution {
    public long minTime(int[] skill, int[] mana) {
        int n = skill.length;
        int m = mana.length;
        long[] prefix = new long[n+1];
        for(int i=0; i<n; i++){
            prefix[i+1]=prefix[i]+skill[i];
        }
        long start = 0;
        for(int j=1; j<m; ++j){
            long manaPrev = mana[j-1];
            long manaCurr = mana[j];
            long deltaMax = Long.MIN_VALUE;
            for(int i=0; i<n; i++){
                long value = prefix[i+1]*manaPrev-prefix[i]*manaCurr;
                if(value>deltaMax){
                    deltaMax = value;
                }
            }
            start += deltaMax;
        }
        long tottal = start + prefix[n]*mana[m-1];
        return tottal;
    }
}        
