class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int sum =0, maxSum = 0;
        double average = 0;

        int i;
        for(i=0; i<k; i++){
            sum = sum + nums[i];
        }
        maxSum = sum;

//Sliding Window
        while(i < nums.length){
            sum = sum + nums[i] - nums[i-k];
            if(sum > maxSum){
                maxSum = sum;
            }
            i++;
        }
        average = (double)maxSum/k;
        return average;
    }
}
