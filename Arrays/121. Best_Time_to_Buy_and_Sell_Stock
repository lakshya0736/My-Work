class Solution {
    public int maxProfit(int[] prices) {
        int n = prices.length;
        int max_Profit=0;
        int buy_price=prices[0];
        for(int i=1;i<n;i++){
            int curr_profit=prices[i]-buy_price;
            if(curr_profit>max_Profit){
                max_Profit=curr_profit;
            }
            if(prices[i]<buy_price){
                buy_price=prices[i];
            }
        }
        return max_Profit;
    }
}
